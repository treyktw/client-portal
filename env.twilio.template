# Add these to your .env.local file

# Twilio Configuration
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890  # Your Twilio phone number with country code
TWILIO_MESSAGING_SERVICE_SID=optional_messaging_service_sid  # Optional

# Webhook URL (update with your domain)
NEXT_PUBLIC_APP_URL=https://your-domain.com

# Convex System Token (for webhook authentication)
# Generate this from Convex dashboard for server-to-server auth
CONVEX_SYSTEM_TOKEN=your_convex_system_token

